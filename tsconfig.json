{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": false,
    "strict": true,
    "removeComments": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": false,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "lib": ["DOM", "ES5", "ES6", "ES7"]
  },
  "include": ["**/*.ts"],
  "buildOptions": {
    "incremental": true
  }
}
